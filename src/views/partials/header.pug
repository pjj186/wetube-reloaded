header
    a(href="/").header__logo
        img(src="/images/colalogo.png").header__logo-image
    nav 
        ul
            li.header__menu
                div.search_form
                    form(method="GET" action="/search")
                        input(placeholder="Search by title", name="keyword", type="text")
                        button
                            i.fas.fa-search
            if loggedIn
                li.header__menu
                    a(href="/videos/upload") Upload Video
                li.header__menu 
                    a(href="/users/edit") Edit Profile
                li.header__menu  
                    a(href="/users/logout") Logout
                li.header__avatar 
                    a(href=`/users/${loggedInUser._id}`)
                        if loggedInUser.avatarUrl === ""
                            span ðŸ˜‹
                        else
                            if loggedInUser.avatarUrl
                                if loggedInUser.avatarUrl.includes("github")
                                    img.header__avatar(src=loggedInUser.avatarUrl)
                                else
                                    img.header__avatar(src=loggedInUser.avatarUrl)

            else
                li.header__menu 
                    a(href="/login") Login 
                li.header__menu  
                    a(href="/join").header__btn Join